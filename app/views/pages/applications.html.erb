<div class="row">
<h1>Listing Applications</h1>
</br>

<div class="jumbotron col-md-10 col-md-offset-1 hidden-xs">
<% @applications.each do |application| %>
<div id="app-table">
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Business</th>
      <th>Email</th>
      <th>Phone</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= application.id %></td>
      <td><%= application.oname %></td>
      <td><%= application.legalname %></td>
      <td><%= application.email %></td>
      <td><%= application.phone %></td>
    </tr>
  </tbody>
</table>

<div class="index-buttons">
  <%= link_to 'EDIT', edit_user_application_path(application.user, application), 
  class: "btn btn-warning" %>

  <%= link_to 'DELETE', [application.user, application], 
  method: :delete, data: { confirm: 'Are you sure?' }, 
  class: "btn btn-danger delete_app" %>
</div>
</div>
<% end %>
<br>
</div>

