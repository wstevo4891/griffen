<div class="nested-fields">
	
  <div class="form-group col-sm-8 col-sm-offset-2">
    <%= f.label "Name" %><br>
    <%= f.text_field :sname, class: "form-control" %>
  </div>
  
  <div class="form-group text-left col-sm-8">
    <%= f.label :shid, "Shareholder ID" %><br>
    <%= f.file_field :shid, class: "shid" %>
    <%= f.hidden_field :shid_cache, :value => f.object.shid_cache %>    
  </div>  
    
  <div class="image-preview shid col-sm-12">
    <% if f.object.shid.url.present? %> 
      <%= image_tag(f.object.shid.url) %>
    <% else %>
      <img/>
    <% end %>     
  </div>  
    
  <div class="links">  
    <%= link_to_remove_association "Remove Shareholder", f, class: "btn btn-danger btn-lg" %>
  </div>
    
</div> 
