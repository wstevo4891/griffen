<div class="container" style="margin-top:5em; margin-bottom:4em">
	
<div class="row">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
</div>

<div class="row">
<div class="jumbotron col-md-6 col-md-offset-3">
<h1>Please Login</h1>
  <%= form_tag do %>
      <div class="form-group">
      	<li style="list-style:none" ><%= label_tag :email, 'Email' %></li>
      	<p><%= text_field_tag :email, params[:email], class: 'form-control' %></p>
      </div>
      <div class="form-group">
      	<li style="list-style:none"><%= label_tag :password, 'Password' %></li>
      	<p><%= password_field_tag :password, params[:password], class: 'form-control' %></p>
      </div>
      <div id="blk" style="margin-top: 4em">
        <button type="submit" class="blk btn btn-lg"><%= "LOGIN" %></button>
      </div>
  <% end %>
</div>
</div>
</div>


