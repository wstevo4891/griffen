<div class="row">
  <div class="jumbotron col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h2>Please Login</h1>
    </br>
    <%= form_tag do %>
      <div class="form-group">
      	<li style="list-style:none" ><%= label_tag :email, 'Email' %></li>
      	<p><%= text_field_tag :email, params[:email], class: 'form-control' %></p>
      </div>
      
      <div class="form-group">
      	<li style="list-style:none"><%= label_tag :password, 'Password' %></li>
      	<p><%= password_field_tag :password, params[:password], class: 'form-control' %></p>
      </div>
      
      <div class="sign-up-button">
        <button type="submit" class="btn btn-lg"><%= "LOGIN" %></button>
      </div>
    <% end %>
  </div>
</div>


