          </thead>
          <tbody>
          	<tr>
              <td><%= user.phone %></td>
          	</tr>
          </tbody>
        </table>
        
        <div class="index-buttons">
          <%= link_to 'Show', user, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-danger delete-user" %>
        </div>
      </div>
    <% end %>
  </div>  
</div>
