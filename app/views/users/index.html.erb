<div class="row">
  <div class='jumbotron col-md-10 col-md-offset-1 hidden-xs'>
  	<h2>Users</h2>
  	</br>
  	<% @users.each do |user| %>
      <div id="users-table">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Business</th>
              <th>Email</th>
              <th>Phone</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= user.firstname %> <%= user.lastname %></td>
              <td><%= user.business %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
            </tr>
          </tbody>
        </table>
        <div class="index-buttons">
          <%= link_to 'Show', user, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-danger delete-user" %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class='jumbotron visible-xs table-mobile'>
  	<h2>Customers</h2>
  	</br>
  	<% @users.each do |user| %>
      <div id="users-table">
        <table class="table-bordered table-mobile-large">
