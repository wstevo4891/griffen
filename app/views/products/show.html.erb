  <p id="notice"><%= notice %></p>
</div>

<div class="row">
<div class='jumbotron col-md-6 col-md-offset-3 lead text-justify'>

<p>
  <strong>Title:</strong>
  <%= @product. title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
