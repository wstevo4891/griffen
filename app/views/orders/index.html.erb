  <%= link_to 'Destroy', order, method: :delete, 
  data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
<% end %>
<br>
<%= link_to 'New Order', new_order_path, class: "btn-black btn-lg" %>
</br>
</div>

