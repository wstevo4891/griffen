<div class="row">
<h1>Listing Orders</h1>
</br>

<div class="jumbotron col-md-10 col-md-offset-1 hidden-xs">
<% @orders.each do |order| %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Business</th>
      <th>Email</th>
      <th>Phone</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= order.oname %></td>
      <td><%= order.legalname %></td>
      <td><%= order.email %></td>
      <td><%= order.phone %></td>
    </tr>
  </tbody>
</table>

<div class="index-buttons">
  <%= link_to 'Show', order, class: "btn btn-primary" %>
